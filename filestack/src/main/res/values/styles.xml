<resources>

    <style name="FilestackNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FilestackAppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="FilestackPopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FilestackNavItem">
        <item name="android:checkable">true</item>
    </style>
    <style name="Widget.Theme.Filestackandroid.ActionBar.Fullscreen"
        parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Filestackandroid.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>
